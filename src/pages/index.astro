---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there!ðŸŽˆ</div>
    <div class="text-5xl font-bold">I'm Kendall Vargas</div>
    <div class="text-3xl py-3 font-bold">Software Tester | QA Automation</div>
    <div class="py-2">
      <text class="text-lg">
        I'm a professional QA with close to 3 years of experience in overall
        quality of Software. I specialize in helping companies elevate their software quality through comprehensive QA strategies, 
        effectively minimizing critical bugs and enhancing user experiences across Web and Desktop/Mobile Applications. <br><br>
        Besides Manual Testing, I also focus on QA Automation techniques, to increase coverage, reduce testing time and costs, by using tools like Cypress, Playwright, and Katalon Studio.
      </text>
    </div>
    <div class="mt-8" style="
    margin-top: 16px">
      <a
        class="btn"
        href="https://www.linkedin.com/in/kendallvargas"
        target="_blank"
      >
        Let's connect!</a
      >
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects:</div>
  </div>

  <HorizontalCard
    title="QA Streaming Project | C++"
    img="/previewCpp.png"
    desc="Developed a C++ pricing calculator for streaming platforms that applies penalties based on watch time. Created a comprehensive test plan and test cases to prevent critical issues, validated project requirements, documented issues in Notion, and implemented bug fixes to ensure system reliability."
    url="https://github.com/kendallvargas/StreamingQA"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Cypress Automation"
    img="/cypress_pic.png"
    desc="Cypress Automation Project: UI, API and Iteration Scenarios, integrated with GitHub Actions, Artifacts(Mochawesome), and Slack notification hook."
    url="https://github.com/kendallvargas/kendall-cypress"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="QA Analyst"
    img="/tc_qa.png"
    desc="QA Analyst Portfolio: Worked on Nike.com website, developed Functional Analysis of the website, Test Cases/Execution and bug tracking with Notion."
    url="https://kendallvargas.notion.site/Portfolio-0a314d8b7fb441988b4e0e674c79d117"
  />
  <div class="divider my-0"></div>

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }

  <div></div>
</BaseLayout>
